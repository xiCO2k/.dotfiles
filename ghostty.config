# Ghostty Configuration - Matching iTerm2 Settings
# Based on your iTerm2 profile: ayu-mirage-changed

# Font Configuration
font-family = MonoLisa-Regular
font-size = 18
adjust-cell-height = 60%

# Color Scheme - Ayu Mirage (Custom)
background = 10131a
foreground = eceded

# ANSI Colors (0-7)
palette = 0=#1a1f29
palette = 1=#f28779
palette = 2=#bae67e
palette = 3=#ffd580
palette = 4=#73d0ff
palette = 5=#d4bfff
palette = 6=#95e6cb
palette = 7=#c7c7c7

# Bright ANSI Colors (8-15)
palette = 8=#686868
palette = 9=#f28779
palette = 10=#bae67e
palette = 11=#ffd580
palette = 12=#73d0ff
palette = 13=#d4bfff
palette = 14=#95e6cb
palette = 15=#ffffff

# Cursor Configuration
cursor-color = f3ff00
cursor-text = 373b41
cursor-style = block
cursor-style-blink = true

# Selection Colors
selection-background = 2a3441
selection-foreground = 585c64

# Window Configuration
window-width = 80
window-height = 24
window-decoration = true
window-padding-x = 24
window-padding-y = 48,24
# Hide title bar, show tabs only when multiple tabs exist
macos-titlebar-style = tabs
# Disable opacity on inactive terminals
unfocused-split-opacity = 1.0
# Brighter split divider color
split-divider-color = #4a4f5a
# Non-native fullscreen (like iTerm2's non-native fullscreen)
macos-non-native-fullscreen = true
# Start in fullscreen mode
fullscreen = true

# Terminal Behavior
shell-integration = detect
mouse-hide-while-typing = true
confirm-close-surface = false
quit-after-last-window-closed = true

# Scrolling
scrollback-limit = 1000

# Bell Configuration
# Ghostty uses 'desktop-notifications' for bells instead
desktop-notifications = false

# Keybindings
# Cmd+R to clear screen (like iTerm2)
keybind = cmd+r=clear_screen
# Cmd+Shift+E sends ESC+e (^[e)
keybind = cmd+shift+e=text:\x1be
# Shift+Enter for newline
keybind = shift+enter=text:\n
# Cmd+` to toggle visibility globally (like iTerm2's hotkey window)
keybind = global:cmd+`=toggle_visibility